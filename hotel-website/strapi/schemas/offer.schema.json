{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Offer",
  "description": "Strapi v5 content type schema for special offers and packages",
  "kind": "collectionType",
  "collectionName": "offers",
  "info": {
    "singularName": "offer",
    "pluralName": "offers",
    "displayName": "Offer",
    "description": "Special offers, packages, and seasonal deals"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 300
    },
    "type": {
      "type": "enumeration",
      "enum": ["seasonal", "package", "early-bird", "last-minute", "loyalty", "romance", "family", "wellness"],
      "default": "package"
    },
    "discountType": {
      "type": "enumeration",
      "enum": ["percentage", "fixed", "nights-free", "upgrade", "value-add"],
      "default": "percentage"
    },
    "discountValue": {
      "type": "decimal",
      "min": 0,
      "description": "Discount amount (percentage or fixed EUR)"
    },
    "minimumNights": {
      "type": "integer",
      "min": 1,
      "default": 1
    },
    "validFrom": {
      "type": "date",
      "required": true
    },
    "validUntil": {
      "type": "date",
      "required": true
    },
    "bookingDeadline": {
      "type": "date",
      "description": "Last date to book this offer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "inclusions": {
      "type": "json",
      "description": "Array of included items/services"
    },
    "terms": {
      "type": "richtext",
      "description": "Terms and conditions"
    },
    "rooms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::room.room",
      "description": "Applicable room types"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "promoCode": {
      "type": "string",
      "maxLength": 50
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
