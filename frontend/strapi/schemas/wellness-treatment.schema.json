{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "kind": "collectionType",
  "collectionName": "wellness_treatments",
  "info": {
    "singularName": "wellness-treatment",
    "pluralName": "wellness-treatments",
    "displayName": "Wellness Treatment",
    "description": "Spa and wellness treatments menu for Grand Hotel Opduin"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 150,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "massage",
        "facial_women",
        "facial_men",
        "body",
        "texel_specials",
        "hands_feet",
        "waxing",
        "pmu",
        "kids"
      ],
      "required": true,
      "default": "massage"
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "duration": {
      "type": "integer",
      "required": true,
      "min": 5,
      "max": 360,
      "default": 60
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "priceNote": {
      "type": "string",
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "isSignature": {
      "type": "boolean",
      "default": false
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "isNew": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "benefits": {
      "type": "json",
      "default": []
    },
    "contraindications": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "bookingUrl": {
      "type": "string",
      "maxLength": 500
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
