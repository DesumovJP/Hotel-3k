{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Posts",
    "description": "Editorial blog content and articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos"]
    },
    "category": {
      "type": "enumeration",
      "enum": ["destination", "culinary", "wellness", "events", "local-tips", "behind-scenes", "sustainability", "news"],
      "required": true
    },
    "tags": {
      "type": "json"
    },
    "author": {
      "type": "component",
      "repeatable": false,
      "component": "shared.author"
    },
    "publishedAt": {
      "type": "datetime"
    },
    "readTime": {
      "type": "integer",
      "min": 1,
      "max": 60
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "relatedPosts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::blog-post.blog-post"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
