{
  "kind": "singleType",
  "collectionName": "global_settings",
  "info": {
    "singularName": "global-setting",
    "pluralName": "global-settings",
    "displayName": "Global Settings",
    "description": "Site-wide settings including contact info, social links, and footer configuration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "default": "Grand Hotel Opduin",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "tagline": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "contact": {
      "type": "component",
      "repeatable": false,
      "required": true,
      "component": "shared.contact-info"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link",
      "min": 0,
      "max": 10
    },
    "footerLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.footer-link",
      "min": 0,
      "max": 20
    },
    "legalLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.legal-link",
      "min": 0,
      "max": 10
    },
    "seoDefaultTitle": {
      "type": "string",
      "maxLength": 70,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seoDefaultDescription": {
      "type": "text",
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
