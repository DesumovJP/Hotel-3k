{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "kind": "collectionType",
  "collectionName": "wellness_facilities",
  "info": {
    "singularName": "wellness-facility",
    "pluralName": "wellness-facilities",
    "displayName": "Wellness Facility",
    "description": "Wellness facilities like pool, sauna, steam bath for Grand Hotel Opduin"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 160,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "icon": {
      "type": "enumeration",
      "enum": [
        "pool",
        "sauna",
        "steam",
        "solarium",
        "jacuzzi",
        "gym",
        "yoga",
        "meditation"
      ],
      "default": "pool"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "price": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "priceType": {
      "type": "enumeration",
      "enum": [
        "free",
        "included",
        "per_hour",
        "per_session",
        "per_day"
      ],
      "default": "included"
    },
    "availability": {
      "type": "component",
      "repeatable": false,
      "component": "wellness.opening-hours"
    },
    "capacity": {
      "type": "integer",
      "min": 1
    },
    "temperature": {
      "type": "string",
      "maxLength": 50,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "features": {
      "type": "json",
      "default": []
    },
    "restrictions": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "isHighlighted": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
