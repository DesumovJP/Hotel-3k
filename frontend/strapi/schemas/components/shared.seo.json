{
  "collectionName": "components_shared_seo",
  "info": {
    "displayName": "SEO",
    "description": "SEO metadata for pages and content",
    "icon": "search"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "maxLength": 70
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "keywords": {
      "type": "text"
    },
    "canonicalURL": {
      "type": "string",
      "maxLength": 255
    },
    "noIndex": {
      "type": "boolean",
      "default": false
    },
    "structuredData": {
      "type": "json"
    }
  }
}
