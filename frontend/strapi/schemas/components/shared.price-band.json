    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "minNights": {
      "type": "integer",
      "min": 1,
      "default": 1
    }
  }
}
